<mujoco model="ur5e scene">
  <include file="ur5e.xml"/>

  <statistic center="0.3 0 0.4" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
   
   <!-- Define a new material for the table top -->
    <material name="table_material" rgba="0.8 0.6 0.4 1"/>

  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" solimp="0.99 0.99 0.01" solref="0.001 1"  friction="0 0 0"/>

    <camera name="fixed" pos="-2 -2 2" xyaxes="1 -1 0 0.5 0.5 1"/>
    <camera name="fixed2" pos="-1 -1.3 1.3" xyaxes="1 -1 0 0.5 0.5 1"/>
    <camera name="fixed3" pos="-0.5 -0.5 0.1" xyaxes="0 -1 0 0 0 1"/>
    <camera name="fixed4" pos="-0.5 -0.5 0.4" xyaxes="0 -1 0 0 0 1"/>

    <!-- Define the table -->
  
    <body name="table" pos="0 -1.4 0.25">
      
      <geom name="table_top" type="box" size="1 1 0.05" material="table_material" condim="3" friction="1 0.005 0.0001" solref="-2500 -1"/>

     
      <body name="table_leg1" pos="-0.5 -0.5 -0.15">
        <geom name="leg1" type="cylinder" size="0.1 0.10" rgba="0.5 0.5 0.5 1" material="table_material"/>
      </body>
      <body name="table_leg2" pos="-0.5 0.5 -0.15">
        <geom name="leg2" type="cylinder" size="0.1 0.10" rgba="0.5 0.5 0.5 1" material="table_material"/>
      </body>
      <body name="table_leg3" pos="0.5 -0.5 -0.15">
        <geom name="leg3" type="cylinder" size="0.1 0.10" rgba="0.5 0.5 0.5 1" material="table_material"/>
      </body>
      <body name="table_leg4" pos="0.5 0.5 -0.15">
        <geom name="leg4" type="cylinder" size="0.1 0.10" rgba="0.5 0.5 0.5 1" material="table_material"/>
      </body>
    </body>
    
  </worldbody>
</mujoco>
